{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Bridge Facts",
    "description": "A schema for storing random facts about bridges",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "$ref": "#/$defs/Fact"
    },
    "$defs": {
        "Fact": {
            "$schema": "http://json-schema.org/draft-07/schema",
            "$id": "Fact",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                },
                "meta": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "message": {
                            "type": "string"
                        },
                        "date": {
                            "type": "object",
                            "properties": {
                                "iso": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "formatted": {
                                    "type": "string"
                                }
                            },
                            "required": ["formatted"],
                            "additionalProperties": false
                        },
                        "image_url": {
                            "type": "string",
                            "format": "uri"
                        },
                        "more_info_url": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": ["title", "message", "date", "image_url"],
                    "additionalProperties" : false
                }
            },
            "required": ["id", "meta"],
            "additionalProperties" : false
        }
    }
}
