{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Bridge Facts",
    "description": "A schema for storing random facts about bridges",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "$ref": "#/$defs/Fact"
    },
    "$defs": {
        "Fact": {
            "$schema": "http://json-schema.org/draft-07/schema",
            "$id": "Fact",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                },
                "specific_month_day": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    },
                    "minItems": 2,
                    "maxItems": 2
                },
                "meta": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "message": {
                            "type": "string"
                        },
                        "display_date": {
                            "type": "string"
                        },
                        "image_url": {
                            "type": "string",
                            "format": "uri"
                        },
                        "more_info_url": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": ["title", "message", "display_date", "image_url"],
                    "additionalProperties" : false
                }
            },
            "required": ["id", "meta"],
            "additionalProperties" : false            
        }
    }
}
